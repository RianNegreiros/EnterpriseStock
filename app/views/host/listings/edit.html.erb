
<h1 class="text-3xl">Edit <%= @listing.title %></h1>

<%= render partial: "shared/errors" %>

<form action="<% host_listing_path(@listing) %>" method="post" class="space-y-8 divide-y divide-gray-200" data-turbo="false">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
  <input type="hidden" name="_method" value="PUT">

  <div class="sm:col-span-6">
    <label for="title" class="block text-sm font-medium text-gray-700">
      Title
    </label>
    <div class="mt-1">
      <input type="text" name="listing[title]" id="title" value="<%= @listing.title %>" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
    </div>
  </div>

  <div class="sm:col-span-6">
    <label for="about" class="block text-sm font-medium text-gray-700">
      About
    </label>
    <textarea id="about" name="listing[about]" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md"><%= @listing.about %></textarea>
  </div>

  <div class="sm:col-span-6">
    <label for="max_guests" class="block text-sm font-medium text-gray-700">
      How many people maxium can stay?
    </label>
    <input type="number" id="max_guests" name="listing[max_guests]" value="<%= @listing.max_guests %>" min="1" max="100" step="1" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
  </div>

  <div>
  <label for="nightly_price" class="block text-sm font-medium text-gray-700">Nightly price</label>
  <div class="relative mt-1 rounded-md shadow-sm">
    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
      <span class="text-gray-500 sm:text-sm">$</span>
    </div>
    <input type="number" id="nightly_price" name="listing[nightly_price]" value="<%= @listing.nightly_price %>" class="block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="1" min="1" step="1">
  </div>
</div>

  <div>
  <label for="cleaning_fee" class="block text-sm font-medium text-gray-700">Cleaning fee</label>
  <div class="relative mt-1 rounded-md shadow-sm">
    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
      <span class="text-gray-500 sm:text-sm">$</span>
    </div>
    <input type="number" id="cleaning_fee" name="listing[cleaning_fee]" value="<%= @listing.cleaning_fee %>" class="block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="1" min="1" step="1">
  </div>
</div>

<div>
  <label for="price" class="block text-sm font-medium text-gray-700">Status</label>
  <div class="relative mt-1 rounded-md shadow-sm">
      <select name="listing[status]" class="block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
        <% Listing.statuses.keys.each do |status| %>
          <option <%= 'selected' if @listing.status == status %>><%= status %></option>
        <% end %>
      </select>
  </div>
</div>

  <input type="submit" value="Update listing" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
</form>